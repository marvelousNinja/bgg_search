{
  "manifest_version": 2,

  "name": "BGG Search",
  "description": "View BGG ratings right away!",
  "version": "0.1",

  "permissions": [
    "notifications",
    "background",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["inject.js"]
  }]
}