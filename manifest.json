{
  "manifest_version": 2,

  "name": "BGG Search",
  "description": "View BGG ratings right away!",
  "version": "0.1",

  "permissions": [
    "notifications",
    "background",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["jquery.js", "main.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery.js", "jquery.textselect.js", "inject.js"]
  }],
  "web_accessible_resources": ["icon.png"]
}